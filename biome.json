{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "files": {
    "maxSize": 10000000
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "lineWidth": 120,
      "indentStyle": "space"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "includes": ["**", "!**/__tests__/**/*.ts"],
    "rules": {
      "recommended": true,
      "performance": {
        "noDelete": { "level": "off" }
      },
      "style": {
        "useNodeAssertStrict": { "level": "error", "fix": "unsafe" },
        "useNodejsImportProtocol": { "level": "off" }
      }
    }
  }
}
